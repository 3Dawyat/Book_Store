@model HomeModel
<div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active" data-interval="10000">
            <img src="~/Images/header-1.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item" data-interval="2000">
            <img src="~/Images/header-2.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Images/header-3.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<section class="section-one text-center">
    <div class="container">
        <div class="content-me">
            <h2>@Model.Home.Titel</h2>
            <p>@Model.Home.Description</p>
            <span>@Model.Home.Saing</span>
        </div>
    </div>
</section>
<section class="main-side">
    <div class="container">
        <div class="row">
            <aside class="col-lg-3 text-right">
                <h2>الأقسام<i class="fas fa-search"></i></h2>
                <ul>
                    @foreach (var dep in ViewBag.Departments)
                    {
                        <li class="nav-item">
                            <a asp-action="Page" asp-route-id="@dep.DepId">@dep.DepName<i class="@dep.Icon"></i></a>
                        </li>
                    }
                </ul>
                <div>
                    <img src="~/Images/logo.png" class="d-block w-100" alt="">
                </div>
            </aside>
            <div class="col-lg-9  content-my-side text-right ">
                @foreach (var dep in ViewBag.Departments)
                {
                    <div class="computer">
                        <h2>أخر الكتب المضافه في قسم @dep.DepName<i class="@dep.Icon"></i> </h2>
                        <div class="row">
                            @{int i = 0;}
                            @foreach (var book in Model.LastAdded)
                            {
                                if (book.DepId == dep.DepId)
                                {
                                    i++;
                                    if (i <= 3)
                                    {
                                        <partial name="Book" model="book" />
                                    }
                                }
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
